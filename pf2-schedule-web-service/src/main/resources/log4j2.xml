<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="package">com.sb</Property>
        <Property name="fileName">sb.log</Property>
        <Property name="pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] [%C{1}.%M] (%F:%L) - %m%n
        </Property>
        <Property name="logPath">/Users/sammy/log/</Property>
    </Properties>
    <Appenders>

        <RollingFile name="R" fileName="${logPath}${fileName}" append="true"
                     filePattern="${logPath}${fileName}.%d{yyyy-MM-dd}.%i">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
        </Console>

    </Appenders>

    <Loggers>
        <Logger name="${package}" level="INFO"/>
        <Root level="INFO">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="R"/>
        </Root>
    </Loggers>
</Configuration>
